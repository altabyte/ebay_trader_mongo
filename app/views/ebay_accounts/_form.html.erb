<%= form_for(@ebay_account) do |f| %>
    <% if @ebay_account.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@ebay_account.errors.count, 'error') %> prohibited this ebay_account from being saved:</h2>

          <ul>
            <% @ebay_account.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div>
      <strong>Status:</strong><%= @ebay_account.ebay_user_status %>
    </div>
    <div class="field">
      <%= f.label :auth_token %><br>
      <%= f.text_area :auth_token, style: 'width: 600px; height: 130px; font-size: 0.75em;' %>
    </div>
    <div class="field">
      <%= f.label :auth_token_expiry_time %><br>
      <%= f.datetime_select :auth_token_expiry_time %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>

    <hr>
    <div style="float:right;">
      <%= link_to 'Delete eBay account', @ebay_account, method: :delete, data: { confirm: 'Do you really want to delete this eBay account?' } %>
    </div>

<% end %>
